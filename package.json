{
	"name": "crotchet",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"postinstall": "cp ./node_modules/sql.js/dist/sql-wasm.wasm ./src/assets/sql-wasm.wasm",
		"dev": "vite --host",
		"config": "node ./generate_capacitor_config.cjs && npx cap copy",
		"config:dev": "NODE_ENV=dev npm run config",
		"build": "npm run config && npx cap copy && vite build",
		"lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview",
		"assets": "npx @capacitor/assets generate",
		"ios": "npm run build && npx cap run ios",
		"ios:dev": "NODE_ENV=dev npm run config && npx cap open ios && vite --host",
		"predesktop": "vite build && rm -r ./electron/app && cp -R ./docs/. ./electron/app",
		"desktop": "electron electron/index.js",
		"desktop:dev": "cross-env NODE_ENV=dev electron electron/index.js",
		"predesktop:package": "vite build && rm -r ./electron/app && cp -R ./docs/. ./electron/app",
		"desktop:package": "cd electron && npx electron-builder",
		"reset-camera": "tccutil reset Camera tz.co.akil.crotchet",
		"reset-perms": "tccutil reset Camera"
	},
	"dependencies": {
		"@adobe/react-spectrum": "^3.34.1",
		"@capacitor-community/electron": "^5.0.1",
		"@capacitor-community/speech-recognition": "^5.0.0",
		"@capacitor/app": "^5.0.7",
		"@capacitor/cli": "^5.6.0",
		"@capacitor/clipboard": "^5.0.6",
		"@capacitor/core": "^5.6.0",
		"@capacitor/filesystem": "^5.2.1",
		"@capacitor/haptics": "^5.0.7",
		"@capacitor/ios": "^5.6.0",
		"@capacitor/keyboard": "^5.0.8",
		"@capacitor/preferences": "^5.0.6",
		"@capacitor/share": "^5.0.7",
		"@capacitor/toast": "^5.0.6",
		"@chakra-ui/react": "^2.8.2",
		"@dnd-kit/core": "^6.1.0",
		"@dnd-kit/modifiers": "^7.0.0",
		"@emotion/react": "^11.11.4",
		"@emotion/styled": "^11.11.5",
		"@headlessui/react": "^2.1.2",
		"@heroicons/react": "^2.1.1",
		"@ionic/pwa-elements": "^3.2.2",
		"@libsql/client": "^0.5.6",
		"@popperjs/core": "^2.11.8",
		"@radix-ui/react-slider": "^1.1.2",
		"@reach/alert-dialog": "^0.18.0",
		"@reach/combobox": "^0.18.0",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/typography": "^0.5.13",
		"@tanstack/react-query": "^5.20.5",
		"airtable": "^0.12.2",
		"canvas-confetti": "^1.9.2",
		"capacitor-widgetsbridge-plugin": "^0.1.1",
		"clsx": "^2.1.0",
		"color.js": "^1.2.0",
		"firebase": "^10.7.2",
		"framer-motion": "^11.0.5",
		"lodash": "^4.17.21",
		"marked": "^13.0.2",
		"match-sorter": "^6.3.4",
		"moment": "^2.30.1",
		"on-change": "^5.0.1",
		"react": "^18.2.0",
		"react-autosize-textarea": "^7.1.0",
		"react-beautiful-dnd": "^13.1.1",
		"react-color": "^2.19.3",
		"react-dom": "^18.2.0",
		"react-error-boundary": "^4.0.13",
		"send-intent": "^5.0.0",
		"socket.io-client": "^4.7.4",
		"sql.js": "^1.10.2"
	},
	"devDependencies": {
		"@capacitor/assets": "^3.0.4",
		"@types/react": "^18.2.43",
		"@types/react-dom": "^18.2.17",
		"@vitejs/plugin-react": "^4.2.1",
		"autoprefixer": "^10.4.17",
		"concurrently": "^8.2.2",
		"cross-env": "^7.0.3",
		"electron": "^28.2.0",
		"electron-packager": "^17.1.2",
		"eslint": "^8.55.0",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.5",
		"postcss": "^8.4.33",
		"tailwindcss": "^3.4.1",
		"vite": "^5.0.8"
	}
}
