{
	"name": "crotchet",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"postinstall": "cp ./node_modules/sql.js/dist/sql-wasm.wasm ./src/assets/sql-wasm.wasm",
		"dev": "vite",
		"build": "vite build",
		"lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview",
		"assets": "npx @capacitor/assets generate",
		"ios": "vite build && npx cap run ios",
		"ios:live": "ionic capacitor run ios --livereload-url=http://localhost:5173/",
		"predesktop": "vite build && rm -r ./electron/build && cp -R ./docs/. ./electron/build",
		"desktop": "electron electron/index.js",
		"desktop:dev": "cross-env NODE_ENV=dev concurrently \"npm:dev\" \"npm:desktop\"",
		"predesktop:package": "vite build && rm -r ./electron/build && cp -R ./docs/. ./electron/build",
		"desktop:package": "electron-packager ./electron --appname=Crotchet --platform=darwin --arch=x64 --icon=electron/icon.icns --overwrite"
	},
	"dependencies": {
		"@adobe/react-spectrum": "^3.34.1",
		"@capacitor-community/electron": "^5.0.1",
		"@capacitor-community/speech-recognition": "^5.0.0",
		"@capacitor/app": "^5.0.7",
		"@capacitor/cli": "^5.6.0",
		"@capacitor/clipboard": "^5.0.6",
		"@capacitor/core": "^5.6.0",
		"@capacitor/filesystem": "^5.2.1",
		"@capacitor/haptics": "^5.0.7",
		"@capacitor/ios": "^5.6.0",
		"@capacitor/keyboard": "^5.0.8",
		"@capacitor/preferences": "^5.0.6",
		"@capacitor/share": "^5.0.7",
		"@capacitor/toast": "^5.0.6",
		"@heroicons/react": "^2.1.1",
		"@ionic/pwa-elements": "^3.2.2",
		"@libsql/client": "^0.5.6",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tanstack/react-query": "^5.20.5",
		"airtable": "^0.12.2",
		"clsx": "^2.1.0",
		"firebase": "^10.7.2",
		"framer-motion": "^11.0.5",
		"match-sorter": "^6.3.4",
		"on-change": "^5.0.1",
		"react": "^18.2.0",
		"react-beautiful-dnd": "^13.1.1",
		"react-dom": "^18.2.0",
		"send-intent": "^5.0.0",
		"socket.io-client": "^4.7.4",
		"sql.js": "^1.10.2"
	},
	"devDependencies": {
		"@capacitor/assets": "^3.0.4",
		"@types/react": "^18.2.43",
		"@types/react-dom": "^18.2.17",
		"@vitejs/plugin-react": "^4.2.1",
		"autoprefixer": "^10.4.17",
		"concurrently": "^8.2.2",
		"cross-env": "^7.0.3",
		"electron": "^28.2.0",
		"electron-packager": "^17.1.2",
		"eslint": "^8.55.0",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.5",
		"postcss": "^8.4.33",
		"tailwindcss": "^3.4.1",
		"vite": "^5.0.8"
	}
}
